{
  "name": "eslint-config-soybeanjs-monorepo",
  "version": "0.2.3",
  "private": true,
  "description": "SoybeanJS's eslint config presets with prettier",
  "author": {
    "name": "SoybeanJS",
    "email": "honghuangdc@gmail.com",
    "url": "https://github.com/soybeanjs"
  },
  "license": "MIT",
  "homepage": "https://github.com/soybeanjs/eslint-config",
  "repository": {
    "url": "https://github.com/soybeanjs/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/soybeanjs/eslint-config/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "lint": "eslint . --fix",
    "format": "prettier --write . '!**/*.{js,jsx,ts,tsx,d.ts,json,jsonc,json5,vue,astro,svelte}'",
    "commit": "soy git-commit",
    "cleanup": "soy cleanup",
    "update-pkg": "soy update-pkg",
    "init-git": "soy init-git-hooks",
    "tsx": "tsx",
    "update-version": "bumpp package.json packages/*/package.json",
    "publish-pkg": "pnpm -r publish --access public",
    "release": "pnpm update-version && pnpm publish-pkg",
    "prepare": "pnpm -r run stub",
    "sync-pkg": "tsx ./scripts/sync.ts"
  },
  "devDependencies": {
    "@soybeanjs/cli": "0.1.6",
    "bumpp": "8.2.1",
    "eslint": "8.34.0",
    "eslint-config-soybeanjs": "workspace:*",
    "lint-staged": "^13.1.2",
    "simple-git-hooks": "^2.8.1",
    "tsup": "6.6.3",
    "tsx": "^3.12.3",
    "typescript": "4.9.5",
    "zx": "7.1.1"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm soybean git-commit-verify",
    "pre-commit": "pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,cjs,mjs,.d.ts}": [
      "eslint . --fix"
    ]
  }
}
